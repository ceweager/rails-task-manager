<h1><%= @task.title %></h1>
<p class="alert alert-primary"><%= @task.details %></p>

<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is complete.
<% else %>
  <i class="far fa-square"></i> This task is not completed yet.
<% end %>
<br>
<br>
<%= link_to 'update', edit_task_path(@task),class: "btn btn-primary" %>
<%= link_to 'home', tasks_path, class: "btn btn-outline-secondary" %>