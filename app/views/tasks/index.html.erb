<h1>My tasks</h1>
<ul><% @tasks.each do |task| %>
  <li>
     <% if task.completed %>
       <i class="far fa-check-square"></i>
     <% else %>
       <i class="far fa-square"></i>
     <% end %>
     <%= link_to task.title, task_path(task) %> - 
     <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>
'.html_safe, task_path(task), method: :delete, data: {confirm: "are you sure you want to delete #{task.title}"}  %>
   </li>
<% end %>
</ul>
<br>
<%= link_to '<i class="fas fa-plus"></i> Add new task'.html_safe, new_task_path %>
